    "target": "ES2018",                       
    "module": "commonjs",                     
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "strict": true,                           
    "moduleResolution": "node",               
    "esModuleInterop": true,                  
  },
  "include": [
    "src/**/*.ts", "types/**/*", "*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}